mousetrack on
vbell off
defscrollback 10000
# If you are using a special term on this computer, set the variable in this
# file, otherwise, it can be empty or absent:
source .screenrc1

# ctrlC creates a new task and immediately offers to rename it, clearing the
# preset name automatically:
bind ^c eval screen "title ''" title
bind "" copy

layout new
screen
split -v
focus
screen
